<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="com.cqut.dao.ServiceMessage.ServiceMessageDao">
 
    <insert id="save" parameterType="com.cqut.entity.ServiceMessage.ServiceMessage">  
     <![CDATA[   
         insert into  serviceMessage ( ID, ProjectName, OfferorsID, TheTotalOffer, offerTime, pictureID, TemplateName, receiverID, Title, contactsName)
         values(#{ID}, #{ProjectName}, #{OfferorsID}, #{TheTotalOffer}, #{offerTime}, #{pictureID}, #{TemplateName}, #{receiverID},#{Title},#{contactsName})	
     ]]>   
    </insert>
  
    
    <!--  mysql -->
    <insert id="saveEntities"> 
	 	 <![CDATA[  
	    	insert into serviceMessage ( ID, ProjectName, OfferorsID, TheTotalOffer, offerTime, pictureID, TemplateName, receiverID, Title, contactsName) VALUES 
	    ]]>  
	    <foreach collection="entities" item="item" index="index" separator=",">   
	         ( #{item.ID}, #{item.ProjectName}, #{item.OfferorsID}, #{item.TheTotalOffer}, #{item.offerTime}, #{item.pictureID}, #{item.TemplateName},#{item.receiverID},#{item.Title},#{item.contactsName})
	    </foreach> 
	</insert> 
	
	
	<update id="updateByID" >
		<![CDATA[  
			update serviceMessage set 	
      		ProjectName = #{entity.ProjectName},
      		OfferorsID = #{entity.OfferorsID},
      		TheTotalOffer = #{entity.TheTotalOffer},
      		offerTime = #{entity.offerTime},
      		pictureID = #{entity.pictureID},
      		TempletID = #{entity.TemplateName},
      		receiverID = #{entity.receiverID},
      		Title = #{entity.Title},
      		contactsName = #{entity.contactsName}
      	]]>
      	<where>
      		ID = #{id}

html, body {
	height: 100%;
	margin: 0;
	overflow: hidden;
	
	
}	/*overflow: hidden;兼容IE7滚动条*/
#container {min-height: 100%;}
html #container {
	height: 100%;
	padding: 0px;	
	min-height: 600px;
	min-width: 850px;
}

/*头部*/
#headContent {
	height:13%;
	width: 100%;
	position: relative;
}

/*修改密码和退出按钮*/
#headContent #operating {
	 position: absolute; 
	 right:50px;
	 bottom: 70%;
}

#headContent #operating a img {
	padding:0;
	border-style:none;
}

#headContent #operating a {
	color:#004694;
	margin:0 5px;
	text-decoration : none;
	cursor: pointer;
	
	/*font-family:"黑体","微软雅黑";
	font-size: 15px; */
	font:  15px  "黑体","微软雅黑" ;
}

#headContent #operating img{
	margin:0;
}

/*右侧内容*/
#mainContent {
	width: 80%;
	height: 80%;
	float: right;
}

/*左侧内容*/
#mainNavigation{
	float: left;
	width: 20%;
	height: 80%;
}

/*用户信息*/
#operatorInfo {
	background-color: #0171BD;
	height: 40px;
	margin: 2% 0;
	float: left;
	width: 100%;
	position: relative;
}

#operatorInfo #greeting {
	float: right;
	width: 75%;
	font-family:"微软雅黑";
	font-size: 17px ;
	color:#fff;
	line-height: 40px;
}

#operatorInfo .operatorPhoto {
	position: absolute;
	width :35px;
	height :35px;
	top: 3px;
	left: 25px;
}



/*导航*/
#navigations{
	clear:both;
	height: 88%;
	overflow:auto;
	width: 100%;
	display: block;
}

/*菜单*/
#navigations .menus {
	background-color: #CEE3F8;
	height: 30px;
	padding-top:10px;
	
	text-indent: 20px;
	
	border-top: 5px solid #FFFFFF;
	
	cursor: pointer;

	font: 16px  "微软雅黑";
	color: #0171bd ;
}


#navigations  .closemenus {
	background-image:url(../../../img/manager/closemenus.png);
	background-repeat:no-repeat;
	background-position: 85%  50%;
}

#navigations .openmenus {
	background-image:url(../../../img/manager/openmenus.png);
	background-repeat:no-repeat;
	background-position: 85%  50%;
}

/*栏目*/
#navigations .items {
	display:none;
	background-color:#f8f8f8;
}

/*栏目下的链接*/
.columns {
	background-color:#F0F7FD;
	
	text-indent:30px;
	height: 35px;
	
	display: block;
	cursor:pointer;
	text-decoration: none;
	line-height:35px; 
	border-top:  8px solid #FFFFFF;
	
	font-family:14px "黑体","微软雅黑";
	color: #0171bd;
}

.columns:hover {
	color:#fc6d05;
}

#mainContent #chiefMenu {
	height: 7%;
	width:100%;
	margin-left:20px;
	background-color: #F0F7FD;
}

#mainContent #chiefMenu span {
	font-family: 16px "微软雅黑";
	color : #0171bd;

	text-align: center;
	display : inline-block;
	height: 100%;
	width: 15%;	
	
	line-height : 250%;
	cursor:pointer;
}

.noSelectMenu {

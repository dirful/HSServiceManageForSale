#mainContent #location{
	margin-top: 10px;
	border:1px solid #C5C5C5;
	margin-left: 20px;
	border-right: 0;
	height: 23px;
	line-height: 23px;
	padding-left: 5px;
	
	font-family: "微软雅黑";
	font-size: 13px;	
	color: #c0c0c0;
}




#bottom {
	height: 5%;
	clear: both;
	border-top-style:solid;
	border-color:#84B6DA;

	font:12px "微软雅黑";	
	color: #0471bb;
}

#dlg label {
	display: inline-block;
	width: 100px;
}


/*覆盖层样式*/
#background { 
	display: block; 
	width: 100%; 
	height: 100%; 
	opacity: 0.4; 
	filter: alpha(opacity=40); 
	background:while; 
	position: absolute; 
	top: 0; 
	left: 0; 
	z-index: 5000; 
} 
#progressBar { 
	border: solid 2px #86A5AD; 
	background: white url(../../../img/manager/progressBar_m.gif) no-repeat 10px 10px;
	display: block; 
	width: 148px; 
	height: 28px; 
	position: fixed; 
	top: 50%; 
	left: 50%; 
	margin-left: -74px; 
	margin-top: -14px; 
	padding: 10px 10px 10px 50px; 
	text-align: left; 
	line-height: 27px; 
	font-weight: bold; 
	position: absolute; 
	z-index: 5000; 
	font-size: 12px; 
	font-family: Arial, sans-serif; 
}
			data : {
				fileID : PICID
			},
			success : function(data) {
				console.log(data);
				$("#operate").hide();
				$("#title").show();
				$("#submitMessage").show();
				$("#messageTemplateWrite").show();
			}
		});
	} else {
	}
});

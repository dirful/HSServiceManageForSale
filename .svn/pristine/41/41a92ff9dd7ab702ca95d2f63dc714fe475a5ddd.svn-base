// 验证报销总额是否为大于0的纯数字
function checkMoney(p) {
	if (!(/^[1-9]\d*(\.\d+)?$/.test(p))) {
		alert("报销总额大于0且为纯数字");
		return false;
	} else {
		return true;
	}
}


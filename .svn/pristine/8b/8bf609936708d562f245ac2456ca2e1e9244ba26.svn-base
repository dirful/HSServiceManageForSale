/**
 * @author 孙宇
 * 
 * @requires jQuery,EasyUI
 * 
 * 创建一个模式化的dialog
 * 
 * @returns $.modalDialog.handler 这个handler代表弹出的dialog句柄
 * 
 * @returns $.modalDialog.xxx 这个xxx是可以自己定义名称，主要用在弹窗关闭时，刷新某些对象的操作，可以将xxx这个对象预定义好
 */
$.modalDialog = function(options) {
	var opts ;
	
	/**传进来的参数没有设置按钮*/
	if(!options.buttons){
		var opts = $.extend({
			title : '',
			width : 840,
			height : 680,
			modal : true,
			onClose : function() {
				$(this).dialog('destroy');
			},
			buttons : [ {
				text : '取消',
				iconCls:'icon-cancel',
				handler:function(){
					result.dialog('close');
				}
			}]
		}, options);
	} else {	/**传进来的参数有按钮*/
		options.buttons.push({
			text : '取消',
			iconCls:'icon-cancel',
			handler:function(){
				result.dialog('close');
			}
		});
		var opts = $.extend({
			title : '',
			width : 840,
			height : 680,
			modal : true,
			onClose : function() {
				$(this).dialog('destroy');
			}
		}, options);
	}
	
	var content = $("#mainContent");
	
	content.removeData("dialogResult");
	content.removeData("parameter");
	content.removeData("processType");
	
	if(options.parameter){
		content.data("parameter", options.parameter);
	}
	
	if(options.processType){
		content.data("processType", options.processType);
	}
	
	opts.modal = true;// 强制此dialog为模式化，无视传递过来的modal参数
	$.modalDialog.handler = $('<div/>').dialog(opts);
	var result = $.modalDialog.handler;
	return result;
};

$.dialogParameter = function(){
	var content = $("#mainContent");
	return content.data("parameter");
}

$.processType = function() {
	var content = $("#mainContent");
	return content.data("processType");
}

$.dialogResult = function(data) {
	var content = $("#mainContent");
	content.data("dialogResult",data);
}